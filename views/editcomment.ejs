<% include partials/header.ejs %>

<div class="container">
    <div class="row">
        <h2 style="text-align:center;"> Edit your comment </h2>
        <div style="width:30% ; margin:25px auto;">
            <form action="/review/<%= movie_id %>/comments/<%= comment._id %>/edit?_method=PUT" method="POST" > <!--send the POST data to post.campgrounds-->
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" placeholder="Text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block"> Submit !</button>
                </div>
            </form>
            <a href='/review/<%= movie_id %>'> Go back </a>
            
        </div>
        
        
    </div>
</div> 

