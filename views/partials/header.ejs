<!DOCTYPE html>
<html>
    <head>
        <title>
            Mini-Flick
        </title>
        <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="/stylesheets/main.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script type="text/javascript">
    setTimeout(function() {
        $('#flash-message').fadeOut('slow');
    }, 2000);
    </script>
    <style>
    h2{
      color: white;
    }
    body{
      font-family: 'Open Sans', sans-serif;
      background: url("/images/film_bg0.jpg");
      background-size:100%;
      background-attachment: fixed;
    }
    .review{
      background: #00b09b;  /* fallback for old browsers */
      background: -webkit-linear-gradient(to left, #96c93d, #00b09b);  /* Chrome 10-25, Safari 5.1-6 */
      background: linear-gradient(to left, #96c93d, #00b09b); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

      color: white;
      border-radius: 10px;

    }
    .jumbotron .container{
      background: rgba(223, 240, 216, 1);
      border: 2px solid green;
      border-radius: 10px;
    }
    .container .jumbotron, .container-fluid .jumbotron{
          padding: 25px;
          background: #000046;  /* fallback for old browsers */
          background: -webkit-linear-gradient(to bottom, #1CB5E0, #000046);  /* Chrome 10-25, Safari 5.1-6 */
          background: linear-gradient(to bottom, #1CB5E0, #000046); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    }
    .input-group{
          padding-bottom: 20px;
          /*width: 300px;*/
    }
    .col-lg-2{
          width: 20%;
    }
    .navbar-default{
      border: 4px solid #202027;
      background: #24C6DC;  /* fallback for old browsers */
      background: -webkit-linear-gradient(to bottom, #514A9D, #24C6DC);  /* Chrome 10-25, Safari 5.1-6 */
      background: linear-gradient(to bottom, #514A9D, #24C6DC); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

    }
    .navbar-default .navbar-brand{
      color: white;
      font-size: 30px;
      background: rgba(0, 103, 153, 0.5);
    }
    .navbar-default .navbar-brand:hover{
      color: #00cc00;
    }
    .navbar-default .navbar-nav>li>a{
      color: white;
      font-size: 20px;
    }
    .navbar-default .navbar-nav>li>a:hover{
      color:red;
    }
    .home{
      line-height: 0;
    }
    .edit_list{
      margin-top: -2px;
    }
    .dl-horizontal dd {
    margin-left: 100px;
}
    </style>
    </head>

    <body>
        <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/home"> Home <i class="home glyphicon glyphicon-home"> </i></a>
            </div>
            <!-- <div class="text-right">
                <form action="/uSearch" method="GET">
                    <div class="input-group input-group-lg">
                      <input type="text" class="form-control" name="user_key" placeholder="Search User">
                      <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                      </div>
                    </div>
                </form>
            </div> -->
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <% if(!currentuser){ %>
                        <li><a href="/login">Login </li>
                        <li><a href="/register">Sign Up</a></li>
                    <% }else{ %>
                        <li class="edit_list"><a href="/user/<%= currentuser._id %>/edit"><%= currentuser.fname %> <%= currentuser.lname %><i class=" button glyphicon glyphicon-edit"></i></a></li>
                        <li><a href="/logout">Logout <i class="fa fa-sign-out" aria-hidden="true"></i></a></a></li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container flash-message" id="flash-message" style="margin-top:20px;">
      <% if (success && success.length>0) { %>
        <div class="alert alert-success" style="font-size:16px; font-weight:bold;" role="alert">
          <%= success %>
        </div>
      <% } %>
      <% if (error && error.length>0) { %>
        <div class="alert alert-danger" style="font-size:16px; font-weight:bold;" role="alert">
          <%= error %>
        </div>
      <% } %>
    </div>
