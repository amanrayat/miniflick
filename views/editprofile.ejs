<% include partials/header.ejs %>

<div class="container">
    <div class="row">
        <div style="width:30% ; margin:75px auto;">
            <h2 style="text-align:center;">Edit Profile!!</h2>
            <form action="/user/<%= user._id %>/edit?_method=PUT" method="POST"> <!--send the POST data to post.campgrounds-->
                <div class="form-group">
                    <input class="form-control" type="text" name="user[fname]"  value ="<%= user.fname %>" placeholder="Firstname">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[lname]"  value ="<%= user.lname %>" placeholder="Lastname">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[Gender]" value ="<%= user.Gender %>" placeholder="Gender">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[age]" value ="<%= user.age %>" placeholder="Age">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[country]" value ="<%= user.country %>" placeholder="Country">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[fmovie]" value ="<%= user.fmovie %>" placeholder="Favorite Movie">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[factor]" value ="<%= user.factor%>" placeholder="Favorite Actor">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[interest]" value ="<%= user.interest %>" placeholder="Interests">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block"> Submit</button>
                </div>
            </form>
            <a href='/home'> Go back </a>

        </div>


    </div>
</div>
<% include partials/footer.ejs %>
